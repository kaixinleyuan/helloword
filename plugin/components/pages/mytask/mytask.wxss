

.box {
  width: 100%;
   background: rgb(255, 128, 109);
}

.conter {
  padding: 0 10rpx;
}

.slide-image {
  width: 100%;
  border-radius: 10rpx;
  height: 100%;
}

.played_friend {
  width: 100%;
  height: 700rpx;
  background: rgb(252, 242, 242);
  margin-top: 20rpx;
  border-radius: 20rpx;
}

.played_more {
  background: rgb(252, 242, 242);
  margin-top: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  opacity: 0.9;
  overflow: hidden;
}

.played_scroll {
  width: 100%;
  height: 90%;
}

.played_title {
  width: 100%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 26rpx;
  font-weight: bolder;
}

.played_msg {
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(255, 129, 107, 0.2);
  align-items: center;
}

.played_head {
  display: flex;
}

.played_head image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.played_name {
  font-size: 22rpx;
  color: #6a3906;
  font-weight: bolder;
}

.played_lv {
  color: #707070;
  font-size: 22rpx;
}

.played_name_msg {
  padding-left: 20rpx;
  width: 100%;
}

.played_name_msg>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.played_userAvater {
  width: 32rpx;
  height: 32rpx;
  border-radius: 42rpx;
  overflow: hidden;
}

.played_userAvater_box {
  display: flex;
  justify-content: space-around;
  width: 30%;
}

.played_friend_num {
  color: #fd6152;
  font-size: 20rpx;
  text-align: center;
  margin-top: 10rpx;
  font-weight: bold;
  width: 30%;
}

.swiper2 {
  height: 190rpx;
  margin-top: 10rpx;
}

.slide-image2 {
  width: 100rpx;
  height: 100rpx;
}

.pd {
  padding: 0 5rpx;
  width: 100rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


